

<div class="clearall"></div>
<div class="row-fluid">
<% @manufacturers.each do |m| %>
<div class="mfgr-display">
  <div class="mfgr-left">
    <%=(image_tag(m.logo_url, class: "mfgr-logo") %>
    <%= image_tag("http://goo.gl/at6FZ3?gdriveurl", class: "img-center", width: "50%") %><br> 
      <%=(image_tag m.composite_url, width: "250") %>
  </div>
  <div class="mfgr-right">
    <h3><%= m.name %></h3>
    <p><%= sanitize m.summary %>
  </div>
  <div class="clearright"></div>
       <p class="center-text"><strong><%= link_to m.company_url %></strong></p>
</div>
<% end %>

